{
    "extends": "./tsconfig.json",
    "compilerOptions": {
      "outDir": "./out-tsc/app",
      "target": "es2015",
      "module": "es2015",
      "moduleResolution": "node",
      "experimentalDecorators": true,
      "skipLibCheck": true,
      "strict": true
    },
    "include": [
      "src/**/*.ts"
    ],
      "exclude": [
        "**/*.spec.ts"
      ]
  }
  